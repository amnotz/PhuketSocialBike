<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.socialbike.phuketsocialbike.FeedActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BEBEBE"

        android:orientation="horizontal">


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:text="Biker Board"
         android:layout_marginTop="20dp"
         android:textSize="25dp" />

        <ImageButton
            android:layout_width="30"
            android:layout_height="30"
            android:id="@+id/imageButtonpost"
            android:layout_margin="10dp"

            android:layout_marginTop="70dp"
            android:background="@drawable/pencil" />
        <ImageButton
            android:layout_width="30"
            android:layout_height="30"
            android:id="@+id/imageButtoncreattrip"
            android:layout_margin="10dp"

            android:layout_marginTop="70dp"
            android:background="@drawable/star" />
        <ImageButton
            android:layout_width="30"
            android:layout_height="30"
            android:id="@+id/imageButtonpostpic"
            android:layout_margin="10dp"

            android:layout_marginTop="70dp" />
        <ImageButton
            android:layout_width="30"
            android:layout_height="30"
            android:id="@+id/imageButtonshare"
            android:layout_margin="10dp"

            android:layout_marginTop="70dp" />


    </LinearLayout>
</RelativeLayout>
